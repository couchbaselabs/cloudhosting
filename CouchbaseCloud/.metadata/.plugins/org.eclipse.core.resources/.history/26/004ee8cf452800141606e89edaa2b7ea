<script>


var xmlhttp;
function loadXMLDoc(url,cfunc)
{
if (window.XMLHttpRequest)
  {// code for IE7+, Firefox, Chrome, Opera, Safari
  xmlhttp=new XMLHttpRequest();
  }
else
  {// code for IE6, IE5
  xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
  }
xmlhttp.onreadystatechange=cfunc;
xmlhttp.open("POST",url,true);
xmlhttp.send(document.getElementById('uname').value);
}

var  cpu = "{{cpu}}"
var time =parseInt(cpu)*parseInt(300)
console.log(cpu)
console.log(time)
function displayTime()
{
	console.log(time)
	document.getElementById("tm").value = time/60
	if (time > 0)
		time = time -1
	
	if ((stre == "IHDE" || stre == "IHAD")&& time<10)
		time = parseInt(300)
	if (stre == "IN" && time <10)
		time = parseInt(120)
	if (stre == "F")
	{
		time = 0
		
	}
}

var test = setInterval(function(){displayTime()},1000)
var stre
function myFunction()
{
   
loadXMLDoc("/poll_state/",function()
  {
  if (xmlhttp.readyState==4 && xmlhttp.status==200)
    {
       stre = xmlhttp.responseText;
    
       stre = JSON.parse(stre)
       
     //  document.getElementById("demo").innerHTML = stre
       if (stre == "RDDE" || stre == "RDAD")
       {
    	   {% load staticfiles %}
           document.getElementById("dep1").src="{% static "ajax-loader.gif" %}" 
           
           document.getElementById("2").style.visibility="hidden";
           document.getElementById("3").style.visibility="hidden";
          
       }
       else if (stre == "IHDE" || stre == "IHAD")
       {
    	   {% load staticfiles %}
           document.getElementById("dep1").src="{% static "checkmark.ico" %}" 
           
           document.getElementById("2").style.visibility="visible";
           
       }
       else if (stre == "IN")
       {
    	   {% load staticfiles %}
           document.getElementById("dep2").src="{% static "checkmark.ico" %}" 
           
           document.getElementById("3").style.visibility="visible";
    	    
       }
       else if (stre == "F")
       {
    	   {% load staticfiles %}
           document.getElementById("dep3").src="{% static "checkmark.ico" %}" 
           
           document.getElementById("Done").style.visibility = "visible"
           
           document.getElementById("tm").value = 0
           clearInterval(test) 
       }
       
    	   
    }
  });
}


</script>
