#!/bin/sh
echo scripts/perf/client: testing ${product}: ${version_number} prefix=${1} num_clients=${2} -- ${PARENT_BUILD_NUMBER} - ${BUILD_NUMBER}

git rev-parse HEAD
git describe --always --long

echo notes: ${notes}

echo test_conf: ${test_conf}
cat ${test_conf}

echo ini_file: ${ini_file}
cat ${ini_file}

if [ -n "${hot_load_phase}" ] ; then
  num_clients=1
  extra=${extra}",hot_load_phase=1"
fi

if [ -n "${warmup}" ] ; then
  extra=${extra}",warmup="${warmup}
fi

if [ -z "${loglevel}" ] ; then
  loglevel="DEBUG"
fi

./testrunner -i ${ini_file} -c ${test_conf} -p prefix=${1},num_clients=${2},load_phase=${load_phase},index_phase=${index_phase},access_phase=${access_phase}${extra}
