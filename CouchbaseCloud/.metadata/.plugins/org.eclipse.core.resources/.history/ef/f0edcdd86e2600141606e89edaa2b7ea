def poll_ins_state(request):
    
    pollcbconn=Couchbase.connect(bucket='default', host='localhost')
    
    result = pollcbconn.get("DeploymentRequest").value
    
    c = result['status']
    
    c= json.dumps(c)
    return HttpResponse(c,mimetype='application/json')



