        cls = get_driver(Provider.EC2_US_EAST)
    
    AWS_EC2_ACCESS_ID = "AKIAIM32BEWJ4F2K2VGQ"
    AWS_EC2_SECRET_KEY = "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"
    
    driver = cls(AWS_EC2_ACCESS_ID, AWS_EC2_SECRET_KEY)
    
