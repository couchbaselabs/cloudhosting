        <script type="text/javascript"  >
			function OnSubmitForm()
			{
				
			    	
				
				var text=""
			    var save;
				
				tags = document.getElementByName('ck')
				for(var i=0; i<tags.length; i++)
				{		
					 if (tags[i].checked)
					    	text = text + "," + tags[i].value
					    else
					       	save = 	tags[i].value
					
				}	    
			    document.getElementById("inslist").value = text
				document.getElemetById("testlist").value = save
				
				if (document.getElementById("1").checked)
				{
					document.getElementById('mngcluster').action ="/Add/";
				}
				else if (document.getElementById("2").checked)
				{
					document.getElementById('mngcluster').action ="/Del/";
				}
			}
		</script>
        <form id="mngcluster" class="content"   onsubmit = "return OnSubmitForm()" method="POST">


            <input type="hidden" name="r" value=""/>

            <fieldset >
            
                <h3>Bucket</h3>
                <select id ="bucket" name="bucket">
                   {% for bk in temp.bucket %}
                   
                       <option name="{{ bk.bucketname}}">{{ bk.bucketname }}</option>
                   {% endfor %}
                   
                
                </select>
                
                <h3> Instances </h3>
                   
                    <table>
	                   <tbody>
	                {% for vm in temp.vm %}

                       <tr>
                         <td>
               				<input type="checkbox" id ="{{ vm.ip}}" name="ck" value = "{{ vm.ip}}"/>{{ vm.ip}}<br>
               			</td>
               		   </tr>      
	                {% endfor %}
	                   </tbody>
	               </table>
        
                <br/>
                <br/>
                <input type="radio" name="operation" id = "1" value="1" checked>Add instance
   				<input type="radio" name="operation" id = "2" value="2">Delete Instance
   				
   				<br/>
   				<br/>
   				<h3> Specify the number of instances below</h3>
   				<input type="text" name ="number" >
   				<br/>
   				<br/>
   				
   				<input type = "text" style ="visibility:hidden" name = "inslist"/>
   				<input type = "text" style ="visibility:hidden" name = "testlist"/>
   				<input type="submit" name="Submit" value ="Submit">
            </fieldset>
           
           
        </form>
    </div>
