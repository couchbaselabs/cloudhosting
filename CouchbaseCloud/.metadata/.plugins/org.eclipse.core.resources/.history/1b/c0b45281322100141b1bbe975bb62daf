<script>
var xmlhttp;
function loadXMLDoc(url,cfunc)
{
if (window.XMLHttpRequest)
  {// code for IE7+, Firefox, Chrome, Opera, Safari
  xmlhttp=new XMLHttpRequest();
  }
else
  {// code for IE6, IE5
  xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
  }
xmlhttp.onreadystatechange=cfunc;
xmlhttp.open("POST",url,true);
xmlhttp.send();
}
function myFunction()
{
loadXMLDoc("/poll_state/",function()
  {
  if (xmlhttp.readyState==4 && xmlhttp.status==200)
    {
       stre = xmlhttp.responseText;
    
       stre = JSON.parse(stre)
       
     //  document.getElementById("demo").innerHTML = stre
       if (stre == "RD")
       {
    	   {% load staticfiles %}
           document.getElementById("dep").src="{% static "ajax-loader.gif" %}" 
           
           document.getElementById("Done").style.visibility="hidden";
          
       }
       else if (stre == "PU")
       {
    	   {% load staticfiles %}
           document.getElementById("dep").src="{% static "checkmark.ico" %}" 
           
           document.getElementById("Done").style.visibility="visible";
           
       }
    }
  });
}


</script>
</head>
<body onload = "setInterval(function(){myFunction()},3000)" >


